{
  "manifest_version": 3,
  "name": "Advanced Auto Refresher",
  "version": "1.0",
  "description": "An advanced extension to automatically refresh web pages with flexible options.",
  "permissions": [
    "tabs",
    "alarms",
    "storage",
    "scripting" 
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}